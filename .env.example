# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Database Configuration
DB_TYPE=sqlite
DB_PATH=sessions.db

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=sessionuser
DB_PASSWORD=sessionpass
DB_NAME=sessions

# Database Connection Pool Configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_AUDIO_MIME_TYPES=audio/*

# AI/ML Configuration
EMBEDDING_DIMENSIONS=1536
SUMMARY_ENTRIES_COUNT=3
SEARCH_RESULTS_LIMIT=10
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# AI Rate Limiting
AI_MAX_REQUESTS_PER_MINUTE=60
AI_RETRY_MAX_ATTEMPTS=3
AI_RETRY_INITIAL_DELAY=1000
AI_RETRY_MAX_DELAY=10000

# CORS Configuration
CORS_ORIGIN=*
